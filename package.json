{
  "name": "poc-nextjs",
  "version": "5.0.0",
  "private": true,
  "homepage": "https://poc-nextjs-rms7.vercel.app/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "post-update": "echo \"codesandbox preview only, need an update\" && npm upgrade --latest",
    "setup": "npx rimraf node_modules/ && npx rimraf .next/ && npm i",
    "test": "npx vitest",
    "test:run": "npx vitest run",
    "test:coverage": "npx vitest run --coverage",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:e2e": "playwright test",
    "test:all": "run-p test:run test:ct test:e2e",
    "test:debug": "cross-env PWDEBUG=1 playwright test -c playwright-debug.config.ts",
    "test:debug:api": "cross-env PWDEBUG=console DEBUG=pw:api playwright test -c playwright-debug.config.ts --debug",
    "test:debug:server": "cross-env PWDEBUG=console DEBUG=pw:webserver playwright test -c playwright-debug.config.ts  --debug",
    "typecheck": "tsc --project tsconfig.json --noEmit --preserveWatchOutput",
    "prettier": "prettier . --loglevel=silent --check",
    "check": "run-p typecheck lint prettier",
    "format": "npm run prettier -- --write",
    "lint:fix": "npm run lint -- --fix",
    "fix": "run-p lint:fix format",
    "commitlint": "npx commitlint --edit --verbose",
    "commitlint:last": "npx commitlint --from HEAD~1 --to HEAD --verbose",
    "deploy:preview": "vercel deploy",
    "deploy": "vercel deploy --prod"
  },
  "dependencies": {
    "@emotion/cache": "11.9.3",
    "@emotion/react": "11.9.3",
    "@emotion/server": "11.4.0",
    "@emotion/styled": "11.9.3",
    "@mui/icons-material": "5.8.4",
    "@mui/material": "5.9.2",
    "next": "12.2.3",
    "phoenix": "1.6.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "2.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "@mswjs/data": "^0.10.1",
    "@playwright/experimental-ct-react": "1.24.2",
    "@playwright/test": "1.24.2",
    "@types/node": "^18.6.1",
    "@types/phoenix": "^1.5.4",
    "@types/react": "^18.0.15",
    "@vitejs/plugin-react": "^2.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jsdom": "^20.0.0",
    "lefthook": "^1.0.5",
    "msw": "^0.44.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.19.1"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
